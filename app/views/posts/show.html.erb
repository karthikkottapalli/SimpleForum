<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<%= form_for [@post, @post.comments.new] do |f| %>
  <%= f.text_field :body %>
  <%= f.submit %>
<% end %>
  

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<% @post.comments.each do |comment| %>
  <hr> <% comment.save %>
    <% if comment.ancestry? %>
      <%= comment.parent.body %>
      **** <%= comment.body %>
    <% elsif comment.is_childless?  %>
        <%= comment.body %>
        <%= link_to "Reply", new_post_comment_path(@post) + "?param1="+comment.id.to_s %>  
      <% end %>
  <hr>
<% end %>

